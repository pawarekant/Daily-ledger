<%- include('./partials/header.ejs') %>

<div class="logincontainer mt-28 w-full h-[80%] flex items-center justify-center bg-gray-50">
    <div class="loginpanel bg-gradient-to-r from-blue-500 to-blue-300 p-10 rounded-lg shadow-xl w-full max-w-md">
        <h3 class="text-3xl font-semibold mb-6 text-center text-white">Create Account</h3>
        
        <form autocomplete="off" action="/register" method="post" enctype="multipart/form-data" class="flex flex-col gap-4 items-center">
            <!-- Email Input -->
            <input class="w-full px-4 py-3 border-2 border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 transition duration-200 ease-in-out" type="email" placeholder="Email" name="email" required>

            <!-- Profile Image Input -->
            <input class="w-full px-4 py-3 border-2 border-gray-300 rounded-md cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-400 transition duration-200 ease-in-out" name="image" type="file" accept="image/*" aria-label="Upload Profile Image">

            <!-- Profile Image Text -->
            <h3 class="text-gray-600 px-3 text-sm text-center">Upload Profile Image</h3>

            <!-- Username Input -->
            <input class="w-full px-4 py-3 border-2 border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 transition duration-200 ease-in-out" type="text" placeholder="Username" name="username" required>

            <!-- Full Name Input -->
            <input class="w-full px-4 py-3 border-2 border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 transition duration-200 ease-in-out" type="text" placeholder="Full Name" name="name" required>

            <!-- Password Input -->
            <input class="w-full px-4 py-3 border-2 border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 transition duration-200 ease-in-out" type="password" placeholder="Password" name="password" required>

            <!-- Submit Button -->
            <input class="w-full py-3 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 transition duration-300" type="submit" value="Create Account">
        </form>

        <!-- Login Link -->
        <div class="mt-5 text-center">
            <a class="text-blue-200 hover:underline" href="/">Already have an account? Login here</a>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
